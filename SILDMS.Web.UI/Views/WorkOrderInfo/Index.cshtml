<script type="text/javascript">

    app.controller('WorkOrderInfoCtrl', ['$scope', '$http', function ($scope, $http) {

        $scope.clientReqItemArray = [];
        $scope.clientReqTermArray = [];
        $scope.itemsByPage = 10;

        $http.get('/WorkOrderInfo/GetServicesCategory')
            .success(function (response) {
                $scope.loading = false;
                $scope.serviceCategorys = response.result;
            }).error(function () { });

        $scope.WOInfo = {
            WOInfoID: "",
            ClientID: "",
            ClientName: "",
            TermsID: "",
            FormName: "",
            WONo: "",
            WOAmt: "",
            WODate: "",
            Remarks: "",
            Status: ""
        }

        $scope.WOInfoItem = {
            WOInfoItemID: "",
            Description: "",
            DeliveryLocation: "",
            DeliveryDate: "",
            ServiceCategory: { ServiceCategoryID: "", ServiceCategoryName: "" },
            ServiceItem: { ServiceItemID: "", ServiceItemName: "" },
            DeliveryMode: "",
            ReqQnty: "",
            ReqUnit: ""
        }

        $('.DatePicker').datepicker({
            format: "dd/mm/yyyy",
            autoclose: true
            // Set minDate to 0 to disable selecting previous dates
        });

        $('.DatePicker')
            .on('changeDate', function (ev) {
                $('.datepicker').hide();
            });

        $('#DeliveryDate').datepicker({
            format: "dd/mm/yyyy",
            autoclose: false,
            minDate: new Date() // Set minDate to the current date to disable selecting previous dates
        }).on('changeDate', function (ev) {
            var EnteredDate = $('#DeliveryDate').val();
            var today = new Date();
            today.setHours(0, 0, 0, 0);

            var date = EnteredDate.substring(0, 2);
            var month = EnteredDate.substring(3, 5);
            var year = EnteredDate.substring(6, 10);
            var myDate = new Date(year, month - 1, date);
            myDate.setHours(0, 0, 0, 0);

            //if (myDate < today) {
            //    $('#DeliveryDate').val('');
            //    toastr.error("Purchase date should not be less than system date.");
            //}

            $('.datepicker').hide();
        });

        // ################# Detail Add Modal ####################
        $scope.AddWoItemModal = function () {
            if ($('#ClientName').val() == "") {
                toastr.error("Client Name Required");
                return;
            }

            if ($('#WONo').val() == "") {
                toastr.error("Client WoNo.  Required");
                return;
            }

            if ($('#WOAmt').val() == "") {
                toastr.error("Work Order Amount Required.");
                return;
            }

            if ($('#WODate').val() == "") {
                toastr.error("Work Order Date: Date Required");
                return;
            }
            $('#RequisitionItemModal').modal('show');
        };

        $scope.masterDataSetupGridData = [];  // base collection
        $scope.GridDisplayCollection = [].concat($scope.masterDataSetupGridData);

        $scope.AddWoItem = function () {

            if ($scope.WOInfoItem.ServiceCategory.ServiceCategoryID == "") {
                toastr.error("Service Category Required");
                return;
            }

            if ($scope.WOInfoItem.ServiceItem.ServiceItemID == "") {
                toastr.error("Service Item  Required");
                return;
            }

            if ($scope.WOInfoItem.DeliveryMode == "") {
                toastr.error("Work Order Amount Required.");
                return;
            }

            if ($scope.WOInfoItem.ReqUnit == "") {
                toastr.error("Work Order Date: Date Required");
                return;
            }

            if ($('#DeliveryLocation').val() == "") {
                toastr.error("Service Category Required");
                return;
            }

            if ($('#DeliveryDate').val() == "") {
                toastr.error("Service Item  Required");
                return;
            }

            if ($('#Description').val() == "") {
                toastr.error("Work Order Amount Required.");
                return;
            }

            if ($('#ReqQnty').val() == "") {
                toastr.error("Work Order Date: Date Required");
                return;
            }

            $scope.WOInfoItem.ServiceCategoryID = $scope.WOInfoItem.ServiceCategory.ServiceCategoryID;
            $scope.WOInfoItem.ServiceCategoryName = $scope.WOInfoItem.ServiceCategory.ServiceCategoryName;
            $scope.WOInfoItem.ServiceItemID = $scope.WOInfoItem.ServiceItem.ServiceItemID;
            $scope.WOInfoItem.ServiceItemName = $scope.WOInfoItem.ServiceItem.ServiceItemName;

            $scope.WOInfoItem.DeliveryMode = $scope.WOInfoItem.DeliveryMode;
            $scope.WOInfoItem.ReqUnit = $scope.WOInfoItem.ReqUnit;

            $scope.WOInfoItem.DeliveryLocation = $('#DeliveryLocation').val();
            $scope.WOInfoItem.DeliveryDate = $('#DeliveryDate').val();
            $scope.WOInfoItem.Description = $('#Description').val();
            $scope.WOInfoItem.ReqQnty = $('#ReqQnty').val();

            $scope.clientReqItemArray.push($scope.WOInfoItem);

            $scope.GridDisplayCollection = $scope.GridDisplayCollection.concat($scope.WOInfoItem);

            $scope.resetWOInfoItem();
            $("#btnAddWoItem").html('Add');
            $('#RequisitionItemModal').modal('hide');
        }

        $scope.resetWOInfoItem = function () {
            $('#DeliveryDate').val('');
            $scope.WOInfoItem = {
                WOInfoItemID: "",
                WOInfoID: "",
                ServiceCategory: { ServiceCategoryID: "", ServiceCategoryName: "" },
                ServiceItem: { ServiceItemID: "", ServiceItemName: "" },
                Description: "",
                DeliveryLocation: "",
                DeliveryDate: "",
                DeliveryMode: "",
                ReqQnty: "",
                ReqUnit: ""
            }
        }

        $scope.ShowClientList = function () {
            $http.get("/WorkOrderInfo/GetClientInfoList")
                .success(function (response) {
                    console.log(response);
                    $scope.ClientList = response.ClientInfoList;
                    $scope.ClientDisplayedCollection = [].concat($scope.ClientList);
                    console.log($scope.ClientDisplayedCollection);
                    $scope.loading = false;
                })
                .error(function () { });

            $('#ClientInfoModal').modal('show');
        };

        var ServiceCategoryID = "";
        $scope.ServiceCategoryChange = function () {
            ServiceCategoryID = $scope.WOInfoItem.ServiceCategory.ServiceCategoryID;
            $http.post("/ServiceItemInfo/GetServiceItemInfoSearchList?ServiceItemCategoryID=" + ServiceCategoryID)
                .success(function (response) {
                    $scope.loading = false;
                    $scope.serviceItems = response.ServiceItemInfoSearchList;
                })
                .error(function () { });
        };

        $scope.clearWOInfo = function () {
            $scope.WOInfo = {
                WOInfoID: "",
                ClientID: "",
                ClientCode: "",
                ClientName: "",
                ContactPerson: "",
                ContactNumber: "",
                ClientTINNo: "",
                ClientBINNo: "",
                ClientAddress: "",
                WONo: "",
                WOAmt: "",
                WODate: "",
                Remarks: ""
            }

            $scope.WOInfoItem = {
                WOInfoItemID: "",
                WOInfoID: "",
                Description: "",
                DeliveryLocation: "",
                DeliveryDate: "",
                ServiceCategory: { ServiceCategoryID: "", ServiceCategoryName: "" },
                ServiceItem: { ServiceItemID: "", ServiceItemName: "" },
                DeliveryMode: "",
                ReqQnty: "",
                ReqUnit: ""
            }
            $scope.WOInfoTerm = {
                WOInfoTermsID: "",
                WOInfoID: "",
                TermsID: "",
                TermsCode: "",
                TermsName: ""
            }
            $("#DeliveryDate").val('');
            $scope.masterDataSetupGridData = [];  // base collection
            $scope.GridDisplayCollection = [].concat($scope.masterDataSetupGridData);

            $scope.ReqTermDataSetupGridData = [];  // base collection
            $scope.ReqTermGridDisplayCollection = [].concat($scope.ReqTermDataSetupGridData);
        }

        $scope.toggleReqItemEdit = function (tableRow, $i) {
            $('#RequisitionItemModal').modal('show');
            $scope.resetWOInfoItem();

            $scope.WOInfoItem.WOInfoItemID = tableRow.WOInfoItemID;

            $scope.WOInfoItem.ServiceCategory.ServiceCategoryID = tableRow.ServiceCategoryID;
            $scope.WOInfoItem.ServiceCategory.ServiceCategoryName = tableRow.ServiceCategoryName;
            $scope.WOInfoItem.ServiceItem.ServiceItemID = tableRow.ServiceItemID;
            $scope.WOInfoItem.ServiceItem.ServiceItemName = tableRow.ServiceItemName;

            $scope.WOInfoItem.DeliveryMode = tableRow.DeliveryMode;
            $scope.WOInfoItem.DeliveryLocation = tableRow.DeliveryLocation;
            $scope.WOInfoItem.DeliveryDate = tableRow.DeliveryDate;
            $scope.WOInfoItem.Description = tableRow.Description;

            $scope.WOInfoItem.ReqQnty = tableRow.ReqQnty;
            $scope.WOInfoItem.ReqUnit = tableRow.ReqUnit;

            $scope.GridDisplayCollection.splice($i, 1);
            $scope.clientReqItemArray.splice($i, 1);

            $http.post("/ServiceItemInfo/GetServiceItemInfoSearchList?ServiceItemCategoryID=" + tableRow.ServiceCategoryID)
                .success(function (response) {
                    $scope.loading = false;
                    $scope.serviceItems = response.ServiceItemInfoSearchList;
                })
                .error(function () { });

            $("#btnAddWoItem").html('Update');
        };

        $scope.toggleReqItemDelete = function (tableRow, $i) {
            if (!tableRow.WOInfoItemID) {
                $scope.resetWOInfoItem();
                $scope.GridDisplayCollection.splice($i, 1);
                $scope.clientReqItemArray.splice($i, 1);
                toastr.success('Data Deleted Successsfully');
            }
            else {
                $scope.resetWOInfoItem();
                $scope.WOInfoItem.WOInfoItemID = tableRow.WOInfoItemID;
                $('#deleteReqItemModal').modal('show');
            }
        };

        $scope.DeleteWOInfoItem = function () {
            $http.post('/WorkOrderInfo/DeleteWOInfoItemAndTerm',
                { WOInfoItemID: $scope.WOInfoItem.WOInfoItemID, WOInfoTermID: $scope.WOInfoTerm.WOInfoTermID })
                .success(function (response) {
                    if (response.status == "S203") {
                        $scope.resetWOInfoItem();
                        $scope.GridDisplayCollection.splice($i, 1);
                        $scope.clientReqItemArray.splice($i, 1);
                        toastr.success('Data Deleted Successsfully');
                        return;
                    }
                });
        }

