                                <button type="button" ng-click="selectWoItem(row)" data-dismiss="modal" title="Select">
                                    <i ng-show="!row.selected" class="fa fa-square-o"></i>
                                    <i ng-show="row.selected" class="fa fa-check-square-o"></i>
