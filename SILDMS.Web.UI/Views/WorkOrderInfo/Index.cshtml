                WOAmt: row.WOAmt,

                VatPerc: row.VatPerc,
                VatAmt: row.VatAmt,
                TolAmt: row.TolAmt
            };

            if (row.selected) {
                row.selected = false;
                var index = $scope.selectedWoItems.findIndex(function (vendor) {
                    return vendor.ClientQutnAprvItemID === row.ClientQutnAprvItemID;
