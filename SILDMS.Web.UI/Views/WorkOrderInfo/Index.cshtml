            WODate: "",
            Remarks: "",
            TolalItem: "",
            SelectedItem: "",
            Status: ""
        }
        $scope.WOInfo.BillType = "Default";
        $scope.WOInfo.BillCategory = "Normal";
        $scope.WOInfo.WODate = new Date().toLocaleDateString('en-GB'); // 'dd/MM/yyyy' format

        $scope.WOInfoItem = {
            WOInfoItemID: "",
            Description: "",
            DeliveryLocation: "",
            DeliveryDate: "",
            ServiceCategory: { ServiceCategoryID: "", ServiceCategoryName: "" },
            ServiceItem: { ServiceItemID: "", ServiceItemName: "" },
            DeliveryMode: "",
            ReqQnty: "",
            ReqUnit: "",
            QutnUnit: "",
            QutnQnty: "",
            QutnPrice: "",
            QutnAmt: "",
            WOQnty: "",
            WOPrice: "",
            WOAmt: "",
            VatPerc: "",
            VatAmt: "",
            TolAmt: ""
        }

        $('.DatePicker').datepicker({
            format: "dd/mm/yyyy",
            autoclose: true
            // Set minDate to 0 to disable selecting previous dates
        });

        $('.DatePicker')
            .on('changeDate', function (ev) {
                $('.datepicker').hide();
            });

        $('#DeliveryDate').datepicker({
            format: "dd/mm/yyyy",
            autoclose: false,
            minDate: new Date() // Set minDate to the current date to disable selecting previous dates
        }).on('changeDate', function (ev) {
            var EnteredDate = $('#DeliveryDate').val();
            var today = new Date();
            today.setHours(0, 0, 0, 0);

            var date = EnteredDate.substring(0, 2);
            var month = EnteredDate.substring(3, 5);
            var year = EnteredDate.substring(6, 10);
            var myDate = new Date(year, month - 1, date);
            myDate.setHours(0, 0, 0, 0);

            $('.datepicker').hide();
        });

        $scope.calculateAmounts = function () {
            if ($scope.WOInfo.BillType == "Installment") {
                var woAmount = parseFloat($scope.WOInfo.WOAmt) || 0;
                var noOfInstallment = parseFloat($scope.WOInfo.NoOfInstallment) || 0;

                // Calculate Installment amount
                $scope.WOInfo.InstallmentAmt = (woAmount) / noOfInstallment;
            }
        };

        // ################# Detail Add Modal ####################
        $scope.AddWoItemModal = function () {
            if ($('#ClientName').val() == "") {
                toastr.error("Client Name Required");
                return;
            }

            if ($('#WONo').val() == "") {
                toastr.error("Client WoNo.  Required");
                return;
            }

            if ($('#WOAmt').val() == "") {
                toastr.error("Work Order Amount Required.");
                return;
            }

            if ($('#WODate').val() == "") {
                toastr.error("Work Order Date: Date Required");
                return;
            }
            $('#RequisitionItemModal').modal('show');
        };

        $scope.masterDataSetupGridData = [];  // base collection
        $scope.GridDisplayCollection = [].concat($scope.masterDataSetupGridData);

        $scope.AddWoItem = function () {

            if ($scope.WOInfoItem.ServiceCategory.ServiceCategoryID == "") {
                toastr.error("Service Category Required");
                return;
            }

            if ($scope.WOInfoItem.ServiceItem.ServiceItemID == "") {
                toastr.error("Service Item  Required");
                return;
            }

            if ($scope.WOInfoItem.DeliveryMode == "") {
                toastr.error("Work Order Amount Required.");
                return;
            }

            if ($scope.WOInfoItem.ReqUnit == "") {
                toastr.error("Work Order Date: Date Required");
                return;
            }

            if ($('#DeliveryLocation').val() == "") {
                toastr.error("Service Category Required");
                return;
