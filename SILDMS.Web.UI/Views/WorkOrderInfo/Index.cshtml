                return;
            }

            if ($('#WONo').val() == "") {
                toastr.error("Client WoNo.  Required");
                return;
            }

            if ($('#WOAmt').val() == "") {
                toastr.error("Work Order Amount Required.");
                return;
            }

            if ($('#WODate').val() == "") {
                toastr.error("Work Order Date: Date Required");
                return;
            }
            $('#RequisitionTermModal').modal('show');
        };

        $scope.ReqTermDataSetupGridData = [];  // base collection
        $scope.ReqTermGridDisplayCollection = [].concat($scope.ReqTermDataSetupGridData);

        $scope.AddReqTerm = function () {

            if ($('#TermsCode').val() == "") {
                toastr.error("Terms Code Required");
                return;
            }

            if ($('#TermsName').val() == "") {
                toastr.error("Terms Name Required.");
                return;
            }

            $scope.WOInfoTerm.TermsCode = $('#TermsCode').val();
            $scope.WOInfoTerm.TermsName = $('#TermsName').val();

            $scope.clientReqTermArray.push($scope.WOInfoTerm);

            $scope.ReqTermGridDisplayCollection = $scope.ReqTermGridDisplayCollection.concat($scope.WOInfoTerm);

            $scope.resetWOInfoTerm();
            $("#btnAddReqTerm").html('Add');
            $('#RequisitionTermModal').modal('hide');
        }

        $scope.resetWOInfoTerm = function () {
            $scope.WOInfoTerm = {
                WOInfoTermsID: "",
                WOInfoID: "",
                TermsID: "",
                TermsCode: "",
                TermsName: ""
            }
        }

        $scope.toggleReqTermEdit = function (tableRow, $i) {
            $('#RequisitionTermModal').modal('show');
            $scope.resetWOInfoTerm();
            $scope.WOInfoTerm.WOInfoTermID = tableRow.WOInfoTermD;
            $scope.WOInfoTerm.WOInfoID = tableRow.WOInfoID;
            $scope.WOInfoTerm.TermsID = tableRow.TermsID;
            $scope.WOInfoTerm.TermsCode = tableRow.TermsCode;
            $scope.WOInfoTerm.TermsName = tableRow.TermsName;
            $scope.ReqTermGridDisplayCollection.splice($i, 1);
            $scope.clientReqTermArray.splice($i, 1);
            $("#btnAddReqTerm").html('Update');
        };

        $scope.toggleReqTermDelete = function (tableRow, $i) {
            if (!tableRow.WOInfoTermID) {
                $scope.resetWOInfoTerm();
                $scope.ReqTermGridDisplayCollection.splice($i, 1);
                $scope.clientReqTermArray.splice($i, 1);
                toastr.success('Data Deleted Successsfully');
            }
            else {
                $scope.resetWOInfoTerm();
                $scope.WOInfoTerm.WOInfoTermID = tableRow.WOInfoTermID;
                $('#deleteReqTermModal').modal('show');
            }
        };

        $scope.DeleteWOInfoTerm = function () {
            $http.post('/WorkOrderInfo/DeleteWOInfoItemAndTerm',
                { WOInfoItemID: $scope.WOInfoItem.WOInfoItemID, WOInfoTermID: $scope.WOInfoTerm.WOInfoTermID })
                .success(function (response) {
                    if (response.status == "S203") {
                        $scope.resetWOInfoTerm();
                        $scope.ReqTermGridDisplayCollection.splice($i, 1);
                        $scope.clientReqTermArray.splice($i, 1);
                        toastr.success('Data Deleted Successsfully');
                        return;
                    }
                });
        }

        ///////////////////////////////////////////////

        $scope.Post = function () {

            if ($('#ClientName').val() == "") {
                toastr.error("Client Name Required");
                return;
            }

            if ($('#WONo').val() == "") {
                toastr.error("Client WoNo.  Required");
                return;
            }

            if ($('#WOAmt').val() == "") {
                toastr.error("Work Order Amount Required.");
                return;
            }

            if ($('#WODate').val() == "") {
                toastr.error("Work Order Date: Date Required");
                return;
            }

            $scope.WOInfo.WODate = $('#WODate').val();
            $scope.WOInfo.WOAmt = $('#WOAmt').val();

            $http.post('/WorkOrderInfo/SaveWorkOrderInfo',
                {
                    woInfo: $scope.WOInfo,
                    woInfoItem: $scope.GridDisplayCollection,//$scope.clientReqItemArray,
                    woInfoTerm: $scope.ReqTermGridDisplayCollection
                })
                .success(function (response) {
                    if (response.status == "S201") {
                        toastr.success("Data Saved Successfully.");
                        $scope.clearWOInfo();
                        $scope.loading = false;
                        return;
                    }
                    else if (response.status == "S202") {
                        toastr.success("Data Updated Successfully.");
                        $scope.clearWOInfo();
                        $scope.loading = false;
                        return;
                    }
                    else if (response.status == "S203") {
                        toastr.success("Data Deleted Successfully.");
                        $scope.clearWOInfo();
                        $scope.loading = false;
                        return;
                    }
                    else {
                        toastr.error("Data Save Failed.");
                        $scope.loading = false;
                        return;
                    }
                })
                .error(function () {
                    toastr.error("Data Save Failed.");
                    $scope.loading = false;
                    return;
                });
        }

        $scope.toggleRefreshTable = function () {
            window.location.reload();
        };
    }])
</script>
