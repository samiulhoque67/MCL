@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
}

<style>
    .welcome-text {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
        font-size: 2.8em;
        font-weight: bold;
        color: #4A90E2;
        text-align: center;
        opacity: 1;
        transform: scale(1);
        font-family: 'Times New Roman', Times, serif;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
        transition: opacity 2s ease-in-out, transform 2s ease-in-out;
    }

    .fade-out {
        opacity: 0;
        transform: scale(0.9);
    }

    .welcome-text img {
        height: 1.8em;
        margin-left: -1em;
        margin-right: -1em;
    }
</style>

<div class="welcome-text" id="welcomeText">
    Welcome to
    <a target="_blank" href="https://mediacombd.com/">
        <img src="../../Content/AdminLTE/img/MCL-mainlogo.png" alt="MCL Logo" />
    </a>
    Dashboard
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const welcomeText = document.getElementById("welcomeText");

        // Function to toggle fade-out class
        function toggleFade() {
            welcomeText.classList.toggle('fade-out');
        }

        // Toggle fade every 3 seconds (2s fade effect + 1s pause)
        setInterval(toggleFade, 700);
    });
</script>
