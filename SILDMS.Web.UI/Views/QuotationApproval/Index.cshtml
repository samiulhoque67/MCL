<script type="text/javascript">



    app.controller('QuotationApproveCntrl', function ($scope, $http) {

        $scope.PagingInfo = {
            page: 1,
            itemsPerPage: 10,
            sortBy: null,
            reverse: false,
            search: null,
            totalItems: 0
        };

        $scope.ClientReq = {
