            ClientName: "",
            ClientRequisitionNo: "",
            ClientReqID: "",
            ClientRequisitionDate: "",
            ContactPerson: "",
            ContactNumber: "",
            ContactTIN: "",
            ContactBIN: "",
            ContactAddress: "",
        }

