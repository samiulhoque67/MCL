        $scope.checkUnitPrice = function (row) {
            var QutnAmt = 0;
            QutnAmt = (row.ReqQnty * row.QutnPrice);
            row.QutnAmt = QutnAmt;
        };
        $scope.checkVatPerc = function (row) {
            var VatAmt = 0;
            VatAmt = (row.VatPerc * row.QutnAmt) / 100;
            row.VatAmt = VatAmt;

            row.TolAmt = row.QutnAmt + row.VatAmt;
        };
        // ################# Detail Add Modal ####################

        $http.get("/VendorSettlement/GetShowVendorReqList")
            .success(function (response) {
                console.log(response);
                $scope.VendorReqList = response.VendorReqList;
                $scope.VendorReqDisplayedCollection = [].concat($scope.VendorReqList);
                console.log($scope.VendorReqDisplayedCollection);
                $scope.loading = false;
            })
            .error(function () { });

        $scope.clearVendorSettlement = function () {
            $scope.VendorSettlement = {
                VendorSettlementID: "",
                ClientID: "",
                ClientCode: "",
                ClientName: "",
                ContactPerson: "",
                ContactNumber: "",
                ClientTINNo: "",
                ClientBINNo: "",
                ClientAddress: "",
                VendorSettlementNo: "",
                ReceivedDate: "",
                QuotationDate: "",
                Remarks: ""
            }
        };
        ////////////////////////Select for Update from Search grid ///////////////////////

        $scope.toggleVendorReqSelect = function (tableRow) {
            $scope.VendorSettlement.ClientFinalPaymentRcvdID = tableRow.ClientFinalPaymentRcvdID;

            $scope.VendorSettlement.ClientID = tableRow.ClientID;
            $scope.VendorSettlement.ClientName = tableRow.ClientName;

            $scope.VendorSettlement.VendorID = tableRow.VendorID;
            $scope.VendorSettlement.VendorName = tableRow.VendorName;

            $scope.VendorSettlement.ClientReqID = tableRow.ClientReqID;
            $scope.VendorSettlement.ClientReqNo = tableRow.ClientReqNo;
            $scope.VendorSettlement.RequisitionDate = tableRow.RequisitionDate;

            $scope.VendorSettlement.WOInfoID = tableRow.WOInfoID;
            $scope.VendorSettlement.WONo = tableRow.WONo;
            $scope.VendorSettlement.WODate = tableRow.WODate;
            $scope.VendorSettlement.WOAmt = tableRow.WOAmt;

            $scope.VendorSettlement.PONo = tableRow.PONo;
            $scope.VendorSettlement.POAmt = tableRow.POAmt;

            $scope.VendorSettlement.TDSAmount = tableRow.TDSAmount;
            $scope.VendorSettlement.TDSPaidAmt = tableRow.TDSPaidAmt;
            $scope.VendorSettlement.VDSAmount = tableRow.VDSAmount;
            $scope.VendorSettlement.VDSPaidAmt = tableRow.VDSPaidAmt;


            $scope.p = 1;

            $('#VendorReqInfoModal').modal('hide');
        };


        $scope.calculateAmounts = function () {
            var billAmount = parseFloat($scope.VendorSettlement.RemainingAmnt) || 0;
            var vatPercentage = parseFloat($scope.VendorSettlement.VATPercentage) || 0;

            // Calculate the VAT amount
            $scope.VendorSettlement.VATAmount = (billAmount * vatPercentage) / 100;

            // Calculate the total bill amount (bill amount + VAT amount)
            $scope.VendorSettlement.TotalBillAmount = billAmount + $scope.VendorSettlement.VATAmount;
            $scope.VendorSettlement.NetPayableAmount = $scope.VendorSettlement.TotalBillAmount - $scope.VendorSettlement.CommissionAmount;
        };

        $scope.calculateCommission = function () {
            var totalbillAmount = parseFloat($scope.VendorSettlement.TotalBillAmount) || 0;
            var poAmount = parseFloat($scope.VendorSettlement.WOAmt) || 0;
            var cmsnPercentage = parseFloat($scope.VendorSettlement.CommissionPercentage) || 0;

            // Calculate the VAT amount
            $scope.VendorSettlement.CommissionAmount = (poAmount * cmsnPercentage) / 100;

            // Calculate the total bill amount (bill amount + VAT amount)
            $scope.VendorSettlement.NetPayableAmount = totalbillAmount - $scope.VendorSettlement.CommissionAmount;
        };


        $scope.calculateTDSAmounts = function () {
            var billAmount = parseFloat($scope.VendorSettlement.RemainingAmnt) || 0;
            var vatPercentage = parseFloat($scope.VendorSettlement.TDSPercentage) || 0;

            // Calculate the VAT amount
            $scope.VendorSettlement.TDSAmount = (billAmount * vatPercentage) / 100;

            // Calculate the total bill amount (bill amount + VAT amount)
            $scope.VendorSettlement.TotalBillAmount = billAmount + $scope.VendorSettlement.TDSAmount;
            $scope.VendorSettlement.NetPayableAmount = $scope.VendorSettlement.TotalBillAmount - $scope.VendorSettlement.TDSAmount;
        };

        $scope.calculateVDSAmounts = function () {
            var totalbillAmount = parseFloat($scope.VendorSettlement.TotalBillAmount) || 0;
            var poAmount = parseFloat($scope.VendorSettlement.WOAmt) || 0;
            var cmsnPercentage = parseFloat($scope.VendorSettlement.CommissionPercentage) || 0;

            // Calculate the VAT amount
            $scope.VendorSettlement.VDSAmount = (poAmount * cmsnPercentage) / 100;

            // Calculate the total bill amount (bill amount + VAT amount)
            $scope.VendorSettlement.NetPayableAmount = totalbillAmount - $scope.VendorSettlement.VDSAmount;
        };

        $scope.calculateBillAmounts = function () {
            var billAmount = parseFloat($scope.VendorSettlement.AprvAmnt) || 0;
            var vatPercentage = parseFloat($scope.VendorSettlement.VDSPercentage) || 0;

            // Calculate the VAT amount
            $scope.VendorSettlement.VDSAmount = (billAmount * vatPercentage) / 100;

            // Calculate the total bill amount (bill amount + VAT amount)
            $scope.VendorSettlement.TotalBillAmount = billAmount + $scope.VendorSettlement.VATAmount;
            $scope.VendorSettlement.NetPayableAmount = $scope.VendorSettlement.TotalBillAmount - $scope.VendorSettlement.CommissionAmount;
        };

        ///////////////////////Save/Update Master///////////////////////

        //////////////////Search Grid List///////////////////////////////

        $scope.SearchVendorSettlementModal = function () {
            $scope.GetVendorSettlementSearchList();
            $('#SearchVendorSettlementModal').modal('show');
        };

        $scope.GetVendorSettlementSearchList = function () {
            $http.post("/VendorSettlement/GetQutnSearchList")
                .success(function (response) {
                    $scope.VendorSettlementSearchList = response.PoSearchList;
                    $scope.VendorSettlementDisplayedCollection = [].concat($scope.VendorSettlementSearchList);
                })
                .error(function () { });
        }

        ////////////////////////Select for Update from Search grid ///////////////////////

        $scope.toggleVendorSettlementSelect = function (tableRow) {
            $scope.VendorSettlement.VendorSettlementID = tableRow.VendorSettlementID;
            $scope.VendorSettlement.ClientID = tableRow.ClientID;
            $scope.VendorSettlement.ClientName = tableRow.ClientName;

            $scope.VendorSettlement.VendorID = tableRow.VendorID;
            $scope.VendorSettlement.VendorName = tableRow.VendorName;

            $scope.VendorSettlement.VendorSettlementNo = tableRow.VendorSettlementNo;
            $scope.VendorSettlement.RequisitionDate = tableRow.RequiDate;
            $scope.VendorSettlement.ClientReqNo = tableRow.ClientReqNo;
            $scope.VendorSettlement.QuotationDate = tableRow.QuotatDate;
            $scope.VendorSettlement.Remarks = tableRow.Remarks;

            $scope.VendorSettlement.VendorBillNo = tableRow.VendorBillNo;
            $scope.VendorSettlement.VendorBillDate = tableRow.VendorBillDate;
            $scope.VendorSettlement.BillReceiveDate = tableRow.BillReceiveDate;
            $scope.VendorSettlement.VATPercentage = tableRow.VATPercentage;
            $scope.VendorSettlement.VATAmount = tableRow.VATAmount;
            $scope.VendorSettlement.CommissionPercentage = tableRow.CommissionPercentage;
            $scope.VendorSettlement.CommissionAmount = tableRow.CommissionAmount;
            $scope.VendorSettlement.TotalBillAmount = tableRow.TotalBillAmount;
            $scope.VendorSettlement.NetPayableAmount = tableRow.NetPayableAmount;
            $scope.VendorSettlement.Note = tableRow.Note;

            $scope.VendorSettlement.WONo = tableRow.WONo;
            $scope.VendorSettlement.WODate = tableRow.WODate;
            $scope.VendorSettlement.WOAmt = tableRow.WOAmt;

            $scope.VendorSettlement.PONo = tableRow.PONo;
