    app.controller('VendorSettlementCtrl', ['$scope', '$http', function ($scope, $http) {

        $scope.itemsByPage = 10;
        $scope.p = 2;
        $scope.q = 1;

        $scope.vendor = {
            name: '',
            poNo: '',
