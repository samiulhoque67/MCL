            $scope.VendorSettlement.AdvancClaimRcvAmt = tableRow.AdvancClaimRcvAmt;
            $scope.VendorSettlement.RemainingAmnt = tableRow.RemainingAmnt;
            $scope.VendorSettlement.RecommendedAmnt = tableRow.RecommendedAmnt;
            $scope.VendorSettlement.RecommendDate = tableRow.RecommendDate;
            $scope.VendorSettlement.AprvAmnt = tableRow.AprvAmnt;
            $scope.VendorSettlement.AprvDate = tableRow.AprvDate;
            $scope.VendorSettlement.AdvancRecvID = tableRow.AdvancRecvID;
            $scope.VendorSettlement.WOInfoID = tableRow.WOInfoID;
            $scope.VendorSettlement.AdvancClaimRcvdDate = tableRow.AdvancClaimRcvdDate;
            $scope.VendorSettlement.ClientFinalBilRecmID = tableRow.ClientFinalBilRecmID;
            $scope.VendorSettlement.ClientFinalBilAprvID = tableRow.ClientFinalBilAprvID;
            $scope.VendorSettlement.Operation = tableRow.Operation;

            $scope.q = 2;
            $scope.p = 1;
            $('#SearchVendorSettlementModal').modal('hide');
        };

        ///////////////////////////////////////////////

        $scope.Post = function () {

            $scope.VendorSettlement.TDSChallanDate = $('#TDSChallanDate').val();
            $scope.VendorSettlement.VDSChallanDate = $('#VDSChallanDate').val();
            alert('');
            $http.post('/VendorSettlement/SaveVendorSettlement',
                {
                    //TDSChallanDate: $('#TDSChallanDate').val()
                    BillRecv: $scope.VendorSettlement,

                })
                .success(function (response) {
                    if (response.status == "S201") {
                        toastr.success("Data Saved Successfully.");
                        $scope.clearVendorSettlement();
                        $scope.loading = false;
                        return;
                    }
                    else if (response.status == "S202") {
                        toastr.success("Data Updated Successfully.");
                        $scope.clearVendorSettlement();
                        $scope.loading = false;
                        return;
                    }
                    else if (response.status == "S203") {
                        toastr.success("Data Deleted Successfully.");
                        $scope.clearVendorSettlement();
                        $scope.loading = false;
                        return;
                    }
                    else {
                        toastr.error("Data Save Failed.");
                        $scope.loading = false;
                        return;
                    }
                })
                .error(function () {
                    toastr.error("Data Save Failed.");
                    $scope.loading = false;
                    return;
                });
        }

        $scope.toggleRefreshTable = function () {
            window.location.reload();
        };
    }])
</script>