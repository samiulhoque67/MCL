                <div class="modal-footer">
                    <div class="col-sm-12 col-md-12 col-lg-12">
                        <div class="form-group">
                            <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="ResetSearchModel()">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script type="text/javascript">

    app.controller('ReceivedFinalPaymentCtrl', ['$scope', '$http', function ($scope, $http) {

        $scope.clientReqItemArray = [];
        $scope.clientReqTermArray = [];
        $scope.itemsByPage = 10;
        $scope.p = 2;
        $scope.q = 1;
     
        $scope.vendor = {
            name: '',
            poNo: '',
            poDate: '',
            quotationNo: '',
            quotationDate: '',
            clientName: '',
            woNo: '',
            woAmount: '',
            poAmount: '',
            billNo: ''
        };

        $scope.VendorQutn = {
            VendorQutnID: "",
            VendorID: "",
            VendorName: "",
            ClientID: "",
            ClientName: "",
            TermsID: "",
            FormName: "",
            VendorQutnNo: "",
            RequisitionDate: "",
            RequisitionNo: "",
            QuotationDate: "",
            Remarks: "",
            Status: "",
            POAmount: "",
            AdvancePaidAmount: "",
            BillAmount: "",
            VendorBillNo: "",
            VendorBillDate: "",
            BillReceiveDate: "",
            VATPercentage: "",
            VATAmount: "",
            CommissionPercentage: "",
            CommissionAmount: "",
            TotalBillAmount: "",
            NetPayableAmount: "",
            Note: "",
            VendrFinalBilRcvdID: "",
            WONo: "",               // Added field
            WODate: "",             // Added field
            WOAmt: "",
            AdvancClaimRcvAmt: "",
            RemainingAmnt: "",
            AdvancRecvID: "",
            WOInfoID: "",
            AdvancClaimRcvdDate: "",
            ClientFinalBilPreprID: "",
            ClientFinalBilRecmID: "",
            RecommendedAmnt: "",
            RecommendDate: "",
            Operation: "",
            AprvAmnt: "",
            AprvDate: "",
            ClientFinalBilAprvID: ""
        };

        $scope.VendorQutnItem = {
            VendorQutnItemID: "",
            Description: "",
            DeliveryLocation: "",
            DeliveryDate: "",
            ServiceCategory: { ServiceCategoryID: "", ServiceCategoryName: "" },
            ServiceItem: { ServiceItemID: "", ServiceItemName: "" },
            DeliveryMode: "",
            ReqQnty: "",
            ReqUnit: "",
            QutnQnty: "",
            QutnPrice: "",
            QutnUnit: "",
            QutnAmt: "",
            VatPerc: "",
            VatAmt: "",
            TolAmt: ""
        }

        $('.DatePicker').datepicker({
            format: "dd/mm/yyyy",
            autoclose: true
            // Set minDate to 0 to disable selecting previous dates
        });

        $('.DatePicker')
            .on('changeDate', function (ev) {
                $('.datepicker').hide();
            });

        $scope.checkUnitPrice = function (row) {
            var QutnAmt = 0;
            QutnAmt = (row.ReqQnty * row.QutnPrice);
            row.QutnAmt = QutnAmt;
        };
        $scope.checkVatPerc = function (row) {
            var VatAmt = 0;
            VatAmt = (row.VatPerc * row.QutnAmt) / 100;
            row.VatAmt = VatAmt;

            row.TolAmt = row.QutnAmt + row.VatAmt;
