        $scope.printData = function () {
            // Use $timeout to ensure DOM updates are complete
            $timeout(function () {
                var VendorSlip = document.getElementById("masterRow");

                // Create an iframe dynamically
                var iframe = document.createElement('iframe');
                iframe.style.position = 'relative';
                iframe.style.width = '0';
                iframe.style.height = '0';
                iframe.style.border = 'none';
                document.body.appendChild(iframe);

                // Write the content to the iframe document
                var doc = iframe.contentWindow.document;
                doc.open();
                doc.write('<html><head><title>PO Info</title>');

                // Add custom styles for printing
                doc.write('<style>' +
                    'body { font-family: Arial, sans-serif; margin: 0; padding: 0; }' +
                    '.title { margin-top: 50px; font-weight: bold; font-size: 24px; }' +
                    'table { width: 80%;  border-collapse: collapse; }' + // Adjusted width here
                    'td, th { padding: 8px; text-align: left; border: 1px solid #ddd; }' +
                    'p { margin: 0; font-size: 14px; }' +
                    '.row { display: flex; flex-wrap: wrap; justify-content: space-between; padding: 10px; }' +
                    '.col-md-5, .col-md-4, .col-md-3 { margin-left: 0px;margin-right: 20px; }' +
                    '.row { display: flex; flex-wrap: wrap; justify-content: space-between; padding: 20px; width: 100%; }' +
                   /* '.row { display: flex; flex-wrap: wrap; justify-content: space-between; padding: 20px; }' +*/
                    '.col-md-12 {width: 100%; margin: 0px; }' +
                    'table {width: 80%;  font-size: 12px; margin-top: 0px;margin-right:0px; }' +
                    '.flex-container { display: flex; justify-content: space-between; margin-top: 20px; width: 100%; }' +
                    '</style>');

                doc.write('</head><body>');

                // Copy content from the original div and write it into the iframe
                doc.write(VendorSlip.outerHTML);

                doc.write('</body></html>');
                doc.close();

                // Wait for content to load and then trigger print
                iframe.contentWindow.focus();
                iframe.contentWindow.print();

                // Remove the iframe from the DOM after printing
                document.body.removeChild(iframe);
            }, 0); // Delay for one digest cycle
        };
